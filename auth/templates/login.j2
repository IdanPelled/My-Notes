{% extends "base.j2" %}
{% block page_title %}
	Log in
{% endblock page_title %}

{% block main %}
	<div class="form-wrap">
		<form id="auth-form" method="POST"
			  action="{{ url_for('auth.login') }}">
			<h2>Log in to My Notes</h2>
			{% with messages = get_flashed_messages(with_categories=true) %}
			{% if messages %}
				{% for category, message in messages %}
					{% if category == "error" %}
						<span class="message message-error">{{ message }}</span>
					{% else %}
						<span class="message message-success">{{ message }}</span>
					{% endif %}
				{% endfor %}
			{% endif %}
			{% endwith %}
			<h3><label for="username">User name</label></h3>
			<input type="text" id="username" name="username" required>
			<h3><label for="password">Password</label></h3>
			<input type="text" id="password" name="password" required>

			<input type="submit" class="btn" value="Log in">

			<span id="from-text">Don't have a user yet? <a href="{{ url_for('auth.signup') }}">Sign Up!</a>.</span>

		</form>
	</div>
{% endblock main %}
